<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExerciceSynthese.Compte">
    <StackLayout>
        <StackLayout MinimumHeightRequest="580" BackgroundColor="#BE008000">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="Retour" Grid.Column="0" Text="Retour" Clicked="Retour_Clicked"/>
                <Button x:Name="Ok" Grid.Column="1" Text=" Ok"  Clicked="Ok_Clicked"/>
            </Grid>
        </StackLayout>

        <StackLayout>
            <Entry Placeholder="Nom" 
                   x:Name="entNom"/>
            <Entry Placeholder="Prenom" 
                   x:Name="entPrenom"/>
            <Entry Placeholder="Age" 
                   x:Name="entAge"/>
                   
            

        </StackLayout>

    </StackLayout>
</ContentPage>